extends layout

block content
	script(src='/web/javascripts/jquery.min.js')
	script(src='/web/javascripts/bootstrap.min.js')
	link(rel='stylesheet', href='/web/stylesheets/register.css')
	
	if authorised
		| Account successfully made
	else
		.container
			.row
				.col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
					form(role='form')
						h2
							| Register
							small 	Official Unofficial TPT Server
						.row
							.col-xs-12.col-sm-6.col-md-6
								.form-group
									input#first_name.form-control.input-lg(type='text', name='first_name', placeholder='First Name', tabindex='1')
							.col-xs-12.col-sm-6.col-md-6
								.form-group
									input#last_name.form-control.input-lg(type='text', name='last_name', placeholder='Last Name', tabindex='2')
						.form-group
							input#display_name.form-control.input-lg(type='text', name='display_name', placeholder='Display Name', tabindex='3')
						.form-group
							input#email.form-control.input-lg(type='email', name='email', placeholder='Email Address', tabindex='4')
						.row
							.col-xs-12.col-sm-6.col-md-6
								.form-group
									input#password.form-control.input-lg(type='password', name='password', placeholder='Password', tabindex='5')
							.col-xs-12.col-sm-6.col-md-6
								.form-group
									input#password_confirmation.form-control.input-lg(type='password', name='password_confirmation', placeholder='Confirm Password', tabindex='6')
						.row
							.col-xs-12.col-md-12
								input.btn.btn-primary.btn-block.btn-lg(type='submit', value='Register', tabindex='7')
